{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "latest"
    }
  },
  "runArgs": [
    "--env-file", ".devcontainer/.env"
  ],
  "onCreateCommand": [
    "bash",
    ".devcontainer/setup-ssh.sh"
  ],
  "postCreateCommand": [
    "bash",
    ".devcontainer/install-hugo.sh"
  ],
  "postStartCommand": [
    "bash",
    ".devcontainer/start-hugo.sh"
  ],
  "forwardPorts": [1313],
  "portsAttributes": {
    "1313": {
      "label": "Hugo Dev Server",
      "onAutoForward": "openBrowser"
    }
  }
}
